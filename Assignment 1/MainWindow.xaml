<Window x:Class="Assignment_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"

        Title="Hotel Management System"
        Height="850"
        Width="1400"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BackgroundBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Modern Header with Gradient -->
        <Border Grid.Row="0"
                Background="{StaticResource PrimaryColorBrush}"
                Height="80"
                materialDesign:ElevationAssist.Elevation="Dp4">
            <Grid Margin="32,0">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <iconPacks:PackIconMaterialDesign Kind="Hotel"
                                                       Width="40" Height="40"
                                                       Foreground="White"
                                                       VerticalAlignment="Center"
                                                       Margin="0,0,16,0"/>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="Hotel Management System"
                                   FontSize="28"
                                   FontWeight="Bold"
                                   Foreground="White"/>
                        <TextBlock Text="Professional Hotel Operations Platform"
                                   FontSize="12"
                                   Foreground="#E0E0E0"
                                   Margin="0,4,0,0"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>

        <TabControl Grid.Row="1"
                    Margin="16"
                    Style="{StaticResource MaterialDesignTabControl}"
                    materialDesign:ColorZoneAssist.Mode="PrimaryMid">

            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <iconPacks:PackIconMaterialDesign Kind="Hotel" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBlock Text="Room Management" VerticalAlignment="Center"/>
                    </StackPanel>
                </TabItem.Header>
                <Grid Margin="16" Background="{StaticResource BackgroundBrush}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <GroupBox Grid.Row="0" Header="Search &amp; Filter" Style="{StaticResource ModernGroupBox}">
                        <Grid Margin="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <Label Grid.Column="0" Content="Room Number:"/>
                            <TextBox Grid.Column="1" Grid.Row="1" materialDesign:HintAssist.Hint="Room Number"
                                     Text="{Binding RoomSearchTerm, UpdateSourceTrigger=PropertyChanged}"/>

                            <Label Grid.Column="2" Content="Room Type:"/>
                            <ComboBox Grid.Column="3" Grid.Row="1"
                                      SelectedItem="{Binding SelectedRoomType}"
                                      ItemsSource="{Binding RoomTypes}"/>

                            <Label Grid.Column="4" Content="Status:"/>
                            <ComboBox Grid.Column="5" Grid.Row="1"
                                      SelectedItem="{Binding SelectedRoomStatus}"
                                      ItemsSource="{Binding RoomStatuses}"/>

                            <Button Grid.Column="6" Grid.RowSpan="2" Style="{StaticResource InfoButton}" 
                                    Command="{Binding SearchRoomsCommand}" VerticalAlignment="Center" Margin="5">
                                <StackPanel Orientation="Horizontal">
                                    <iconPacks:PackIconMaterialDesign Kind="Search" Margin="0,0,5,0"/>
                                    <TextBlock Text="Search"/>
                                </StackPanel>
                            </Button>
                        </Grid>
                    </GroupBox>

                    <GroupBox Grid.Row="1" Header="Rooms" Style="{StaticResource ModernGroupBox}">
                        <DataGrid ItemsSource="{Binding Rooms}"
                                  SelectedItem="{Binding SelectedRoom}"
                                  Style="{StaticResource ModernDataGrid}">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                                <DataGridTextColumn Header="Room Number" Binding="{Binding RoomNumber}" Width="100"/>
                                <DataGridTextColumn Header="Type" Binding="{Binding Type}" Width="80"/>
                                <DataGridTextColumn Header="Price/Night" Binding="{Binding PricePerNight, StringFormat=C}" Width="120"/>
                                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="*"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </GroupBox>

                    <StackPanel Grid.Row="2" Orientation="Horizontal" 
                                HorizontalAlignment="Center" Margin="10">
                        <Button Style="{StaticResource PrimaryButton}" Command="{Binding AddRoomCommand}" Margin="5">
                            <StackPanel Orientation="Horizontal">
                                <iconPacks:PackIconMaterialDesign Kind="HomePlus" Margin="0,0,5,0"/>
                                <TextBlock Text="Add Room"/>
                            </StackPanel>
                        </Button>
                        <Button Style="{StaticResource PrimaryButton}" Command="{Binding EditRoomCommand}" Margin="5">
                            <StackPanel Orientation="Horizontal">
                                <iconPacks:PackIconMaterialDesign Kind="HomeEdit" Margin="0,0,5,0"/>
                                <TextBlock Text="Edit Room"/>
                            </StackPanel>
                        </Button>
                        <Button Style="{StaticResource DangerButton}" Command="{Binding DeleteRoomCommand}" Margin="5">
                            <StackPanel Orientation="Horizontal">
                                <iconPacks:PackIconMaterialDesign Kind="HomeRemove" Margin="0,0,5,0"/>
                                <TextBlock Text="Delete Room"/>
                            </StackPanel>
                        </Button>
                        <Button Style="{StaticResource InfoButton}" Command="{Binding RefreshRoomsCommand}" Margin="5">
                            <StackPanel Orientation="Horizontal">
                                <iconPacks:PackIconMaterialDesign Kind="Refresh" Margin="0,0,5,0"/>
                                <TextBlock Text="Refresh"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>
            </TabItem>

            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <iconPacks:PackIconMaterialDesign Kind="AccountGroup" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBlock Text="Customer Management" VerticalAlignment="Center"/>
                    </StackPanel>
                </TabItem.Header>
                <Grid Margin="16" Background="{StaticResource BackgroundBrush}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <GroupBox Grid.Row="0" Header="Search" Style="{StaticResource ModernGroupBox}">
                        <Grid Margin="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <Label Grid.Column="0" Content="Search by Name, Email, or Phone:"/>
                            <TextBox Grid.Column="1" Grid.Row="1" materialDesign:HintAssist.Hint="Name, Email, or Phone"
                                     Text="{Binding CustomerSearchTerm, UpdateSourceTrigger=PropertyChanged}"/>

                            <Button Grid.Column="2" Grid.RowSpan="2" Style="{StaticResource InfoButton}"
                                    Command="{Binding SearchCustomersCommand}" VerticalAlignment="Center" Margin="5">
                                <StackPanel Orientation="Horizontal">
                                    <iconPacks:PackIconMaterialDesign Kind="Search" Margin="0,0,5,0"/>
                                    <TextBlock Text="Search"/>
                                </StackPanel>
                            </Button>
                        </Grid>
                    </GroupBox>

                    <GroupBox Grid.Row="1" Header="Customers" Style="{StaticResource ModernGroupBox}">
                        <DataGrid ItemsSource="{Binding Customers}"
                                  SelectedItem="{Binding SelectedCustomer}"
                                  Style="{StaticResource ModernDataGrid}">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                                <DataGridTextColumn Header="Name" Binding="{Binding FullName}" Width="200"/>
                                <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="200"/>
                                <DataGridTextColumn Header="Phone" Binding="{Binding PhoneNumber}" Width="150"/>
                                <DataGridTextColumn Header="Address" Binding="{Binding Address}" Width="*"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </GroupBox>

                    <StackPanel Grid.Row="2" Orientation="Horizontal" 
                                HorizontalAlignment="Center" Margin="10">
                        <Button Style="{StaticResource PrimaryButton}" Command="{Binding AddCustomerCommand}" Margin="5">
                            <StackPanel Orientation="Horizontal">
                                <iconPacks:PackIconMaterialDesign Kind="AccountPlus" Margin="0,0,5,0"/>
                                <TextBlock Text="Add Customer"/>
                            </StackPanel>
                        </Button>
                        <Button Style="{StaticResource PrimaryButton}" Command="{Binding EditCustomerCommand}" Margin="5">
                            <StackPanel Orientation="Horizontal">
                                <iconPacks:PackIconMaterialDesign Kind="AccountEdit" Margin="0,0,5,0"/>
                                <TextBlock Text="Edit Customer"/>
                            </StackPanel>
                        </Button>
                        <Button Style="{StaticResource DangerButton}" Command="{Binding DeleteCustomerCommand}" Margin="5">
                            <StackPanel Orientation="Horizontal">
                                <iconPacks:PackIconMaterialDesign Kind="AccountRemove" Margin="0,0,5,0"/>
                                <TextBlock Text="Delete Customer"/>
                            </StackPanel>
                        </Button>
                        <Button Style="{StaticResource InfoButton}" Command="{Binding RefreshCustomersCommand}" Margin="5">
                            <StackPanel Orientation="Horizontal">
                                <iconPacks:PackIconMaterialDesign Kind="Refresh" Margin="0,0,5,0"/>
                                <TextBlock Text="Refresh"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>
            </TabItem>

            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <iconPacks:PackIconMaterialDesign Kind="CalendarClock" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBlock Text="Booking Management" VerticalAlignment="Center"/>
                    </StackPanel>
                </TabItem.Header>
                <Grid Margin="16" Background="{StaticResource BackgroundBrush}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <GroupBox Grid.Row="0" Header="Search &amp; Filter" Style="{StaticResource ModernGroupBox}">
                        <Grid Margin="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <Label Grid.Column="0" Content="Customer Name:"/>
                            <TextBox Grid.Column="1" Grid.Row="1" materialDesign:HintAssist.Hint="Customer Name"
                                     Text="{Binding BookingCustomerSearch, UpdateSourceTrigger=PropertyChanged}"/>

                            <Label Grid.Column="2" Content="Room Number:"/>
                            <TextBox Grid.Column="3" Grid.Row="1" materialDesign:HintAssist.Hint="Room Number"
                                     Text="{Binding BookingRoomSearch, UpdateSourceTrigger=PropertyChanged}"/>

                            <Label Grid.Column="4" Content="Status:"/>
                            <ComboBox Grid.Column="5" Grid.Row="1"
                                      SelectedItem="{Binding SelectedBookingStatus}"
                                      ItemsSource="{Binding BookingStatuses}"/>

                            <Button Grid.Column="6" Grid.RowSpan="2" Style="{StaticResource InfoButton}"
                                    Command="{Binding SearchBookingsCommand}" VerticalAlignment="Center" Margin="5">
                                <StackPanel Orientation="Horizontal">
                                    <iconPacks:PackIconMaterialDesign Kind="Search" Margin="0,0,5,0"/>
                                    <TextBlock Text="Search"/>
                                </StackPanel>
                            </Button>
                        </Grid>
                    </GroupBox>

                    <GroupBox Grid.Row="1" Header="Bookings" Style="{StaticResource ModernGroupBox}">
                        <DataGrid ItemsSource="{Binding Bookings}"
                                  SelectedItem="{Binding SelectedBooking}"
                                  Style="{StaticResource ModernDataGrid}">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                                <DataGridTextColumn Header="Customer" Binding="{Binding Customer.FullName}" Width="150"/>
                                <DataGridTextColumn Header="Room" Binding="{Binding Room.RoomNumber}" Width="80"/>
                                <DataGridTextColumn Header="Check In" Binding="{Binding CheckInDate, StringFormat=dd/MM/yyyy}" Width="100"/>
                                <DataGridTextColumn Header="Check Out" Binding="{Binding CheckOutDate, StringFormat=dd/MM/yyyy}" Width="100"/>
                                <DataGridTextColumn Header="Nights" Binding="{Binding NumberOfNights}" Width="60"/>
                                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="100"/>
                                <DataGridTextColumn Header="Total Amount" Binding="{Binding TotalAmount, StringFormat=C}" Width="*"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </GroupBox>

                    <StackPanel Grid.Row="2" Orientation="Horizontal" 
                                HorizontalAlignment="Center" Margin="10">
                        <Button Style="{StaticResource PrimaryButton}" Command="{Binding AddBookingCommand}" Margin="5">
                            <StackPanel Orientation="Horizontal">
                                <iconPacks:PackIconMaterialDesign Kind="BookPlus" Margin="0,0,5,0"/>
                                <TextBlock Text="New Booking"/>
                            </StackPanel>
                        </Button>
                        <Button Style="{StaticResource PrimaryButton}" Command="{Binding EditBookingCommand}" Margin="5">
                            <StackPanel Orientation="Horizontal">
                                <iconPacks:PackIconMaterialDesign Kind="BookEdit" Margin="0,0,5,0"/>
                                <TextBlock Text="Edit Booking"/>
                            </StackPanel>
                        </Button>
                        <Button Style="{StaticResource DangerButton}" Command="{Binding CancelBookingCommand}" Margin="5">
                            <StackPanel Orientation="Horizontal">
                                <iconPacks:PackIconMaterialDesign Kind="BookCancel" Margin="0,0,5,0"/>
                                <TextBlock Text="Cancel Booking"/>
                            </StackPanel>
                        </Button>
                        <Button Style="{StaticResource SuccessButton}" Command="{Binding CheckInBookingCommand}" Margin="5">
                            <StackPanel Orientation="Horizontal">
                                <iconPacks:PackIconMaterialDesign Kind="Login" Margin="0,0,5,0"/>
                                <TextBlock Text="Check In"/>
                            </StackPanel>
                        </Button>
                        <Button Style="{StaticResource InfoButton}" Command="{Binding CheckOutBookingCommand}" Margin="5">
                            <StackPanel Orientation="Horizontal">
                                <iconPacks:PackIconMaterialDesign Kind="Logout" Margin="0,0,5,0"/>
                                <TextBlock Text="Check Out"/>
                            </StackPanel>
                        </Button>
                        <Button Style="{StaticResource InfoButton}" Command="{Binding RefreshBookingsCommand}" Margin="5">
                            <StackPanel Orientation="Horizontal">
                                <iconPacks:PackIconMaterialDesign Kind="Refresh" Margin="0,0,5,0"/>
                                <TextBlock Text="Refresh"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>
            </TabItem>

            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <iconPacks:PackIconMaterialDesign Kind="AccountTie" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBlock Text="Staff Management" VerticalAlignment="Center"/>
                    </StackPanel>
                </TabItem.Header>
                <Grid Margin="16" Background="{StaticResource BackgroundBrush}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <GroupBox Grid.Row="0" Header="Search &amp; Filter" Style="{StaticResource ModernGroupBox}">
                        <Grid Margin="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <Label Grid.Column="0" Content="Search by Name:"/>
                            <TextBox Grid.Column="1" Grid.Row="1" materialDesign:HintAssist.Hint="Staff Name"
                                     Text="{Binding StaffSearchTerm, UpdateSourceTrigger=PropertyChanged}"/>

                            <Label Grid.Column="2" Content="Role:"/>
                            <ComboBox Grid.Column="3" Grid.Row="1"
                                      SelectedItem="{Binding SelectedStaffRole}"
                                      ItemsSource="{Binding StaffRoles}"/>

                            <Button Grid.Column="4" Grid.RowSpan="2" Style="{StaticResource InfoButton}" 
                                    Command="{Binding SearchStaffCommand}" VerticalAlignment="Center" Margin="5">
                                <StackPanel Orientation="Horizontal">
                                    <iconPacks:PackIconMaterialDesign Kind="Search" Margin="0,0,5,0"/>
                                    <TextBlock Text="Search"/>
                                </StackPanel>
                            </Button>
                        </Grid>
                    </GroupBox>

                    <GroupBox Grid.Row="1" Header="Staff Members" Style="{StaticResource ModernGroupBox}">
                        <DataGrid ItemsSource="{Binding StaffMembers}"
                                  SelectedItem="{Binding SelectedStaff}"
                                  Style="{StaticResource ModernDataGrid}">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="200"/>
                                <DataGridTextColumn Header="Role" Binding="{Binding Role}" Width="120"/>
                                <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="200"/>
                                <DataGridTextColumn Header="Phone" Binding="{Binding PhoneNumber}" Width="150"/>
                                <DataGridCheckBoxColumn Header="Active" Binding="{Binding IsActive}" Width="80"/>
                                <DataGridTextColumn Header="Created Date" Binding="{Binding CreatedDate, StringFormat=dd/MM/yyyy}" Width="*"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </GroupBox>

                    <StackPanel Grid.Row="2" Orientation="Horizontal" 
                                HorizontalAlignment="Center" Margin="10">
                        <Button Style="{StaticResource PrimaryButton}" Command="{Binding AddStaffCommand}" Margin="5">
                            <StackPanel Orientation="Horizontal">
                                <iconPacks:PackIconMaterialDesign Kind="AccountPlus" Margin="0,0,5,0"/>
                                <TextBlock Text="Add Staff"/>
                            </StackPanel>
                        </Button>
                        <Button Style="{StaticResource PrimaryButton}" Command="{Binding EditStaffCommand}" Margin="5">
                            <StackPanel Orientation="Horizontal">
                                <iconPacks:PackIconMaterialDesign Kind="AccountEdit" Margin="0,0,5,0"/>
                                <TextBlock Text="Edit Staff"/>
                            </StackPanel>
                        </Button>
                        <Button Style="{StaticResource DangerButton}" Command="{Binding DeactivateStaffCommand}" Margin="5">
                            <StackPanel Orientation="Horizontal">
                                <iconPacks:PackIconMaterialDesign Kind="AccountRemove" Margin="0,0,5,0"/>
                                <TextBlock Text="Deactivate Staff"/>
                            </StackPanel>
                        </Button>
                        <Button Style="{StaticResource InfoButton}" Command="{Binding RefreshStaffCommand}" Margin="5">
                            <StackPanel Orientation="Horizontal">
                                <iconPacks:PackIconMaterialDesign Kind="Refresh" Margin="0,0,5,0"/>
                                <TextBlock Text="Refresh"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>
            </TabItem>

            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <iconPacks:PackIconMaterialDesign Kind="FileDocumentEdit" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBlock Text="Audit Logs" VerticalAlignment="Center"/>
                    </StackPanel>
                </TabItem.Header>
                <Grid Margin="16" Background="{StaticResource BackgroundBrush}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <GroupBox Grid.Row="0" Header="Filter" Style="{StaticResource ModernGroupBox}">
                        <Grid Margin="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <Label Grid.Column="0" Content="Table Name:"/>
                            <TextBox Grid.Column="1" Grid.Row="1" materialDesign:HintAssist.Hint="Table Name"
                                     Text="{Binding AuditTableName, UpdateSourceTrigger=PropertyChanged}"/>

                            <Label Grid.Column="2" Content="Operation:"/>
                            <ComboBox Grid.Column="3" Grid.Row="1"
                                      SelectedItem="{Binding SelectedAuditOperation}"
                                      ItemsSource="{Binding AuditOperations}"/>

                            <Label Grid.Column="4" Content="From Date:"/>
                            <DatePicker Grid.Column="5" Grid.Row="1"
                                        SelectedDate="{Binding AuditFromDate}"/>

                            <Label Grid.Column="6" Content="To Date:"/>
                            <DatePicker Grid.Column="7" Grid.Row="1"
                                        SelectedDate="{Binding AuditToDate}"/>

                            <Button Grid.Column="8" Grid.RowSpan="2" Style="{StaticResource InfoButton}"
                                    Command="{Binding FilterAuditLogsCommand}" VerticalAlignment="Center" Margin="5">
                                <StackPanel Orientation="Horizontal">
                                    <iconPacks:PackIconMaterialDesign Kind="Filter" Margin="0,0,5,0"/>
                                    <TextBlock Text="Filter"/>
                                </StackPanel>
                            </Button>
                        </Grid>
                    </GroupBox>

                    <GroupBox Grid.Row="1" Header="Audit Logs" Style="{StaticResource ModernGroupBox}">
                        <DataGrid ItemsSource="{Binding AuditLogs}"
                                  Style="{StaticResource ModernDataGrid}">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                                <DataGridTextColumn Header="Date" Binding="{Binding OperationDate, StringFormat=dd/MM/yyyy HH:mm}" Width="120"/>
                                <DataGridTextColumn Header="Staff" Binding="{Binding Staff.Name}" Width="150"/>
                                <DataGridTextColumn Header="Table" Binding="{Binding TableName}" Width="100"/>
                                <DataGridTextColumn Header="Operation" Binding="{Binding OperationDisplayName}" Width="100"/>
                                <DataGridTextColumn Header="Record ID" Binding="{Binding RecordId}" Width="80"/>
                                <DataGridTextColumn Header="Details" Binding="{Binding Details}" Width="*"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </GroupBox>

                    <StackPanel Grid.Row="2" Orientation="Horizontal" 
                                HorizontalAlignment="Center" Margin="10">
                        <Button Style="{StaticResource InfoButton}" Command="{Binding RefreshAuditLogsCommand}" Margin="5">
                            <StackPanel Orientation="Horizontal">
                                <iconPacks:PackIconMaterialDesign Kind="Refresh" Margin="0,0,5,0"/>
                                <TextBlock Text="Refresh"/>
                            </StackPanel>
                        </Button>
                        <Button Style="{StaticResource PrimaryButton}" Command="{Binding ExportAuditLogsCommand}" Margin="5">
                            <StackPanel Orientation="Horizontal">
                                <iconPacks:PackIconMaterialDesign Kind="FileExport" Margin="0,0,5,0"/>
                                <TextBlock Text="Export Logs"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
<Window x:Class="Assignment_1.BookingEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        Title="Booking Details"
        Height="700"
        Width="600"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource BackgroundBrush}"
        ResizeMode="NoResize">

    <Border Padding="24" Background="{StaticResource SurfaceBrush}"
            Margin="16" CornerRadius="12"
            materialDesign:ElevationAssist.Elevation="Dp4">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,24">
                <iconPacks:PackIconMaterial Kind="Calendar"
                                                   Width="32" Height="32"
                                                   Foreground="{StaticResource PrimaryColorBrush}"
                                                   VerticalAlignment="Center"
                                                   Margin="0,0,12,0"/>
                <TextBlock Text="Booking Information"
                           Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                           Foreground="{StaticResource PrimaryColorBrush}"
                           FontWeight="Bold"
                           VerticalAlignment="Center"/>
            </StackPanel>

            <!-- Customer Selection -->
            <StackPanel Grid.Row="1" Margin="0,0,0,16">
                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <iconPacks:PackIconMaterial Kind="Account"
                                                       Width="18" Height="18"
                                                       VerticalAlignment="Center"
                                                       Margin="0,0,8,0"/>
                    <TextBlock Text="Customer"
                               Style="{StaticResource ModernLabel}"
                               Margin="0"/>
                </StackPanel>
                <ComboBox x:Name="CustomerCombo"
                          Style="{StaticResource ModernComboBox}"
                          DisplayMemberPath="FullName"
                          materialDesign:HintAssist.Hint="Select customer"/>
            </StackPanel>

            <!-- Room Selection -->
            <StackPanel Grid.Row="2" Margin="0,0,0,16">
                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <iconPacks:PackIconMaterial Kind="Hotel"
                                                       Width="18" Height="18"
                                                       VerticalAlignment="Center"
                                                       Margin="0,0,8,0"/>
                    <TextBlock Text="Room"
                               Style="{StaticResource ModernLabel}"
                               Margin="0"/>
                </StackPanel>
                <ComboBox x:Name="RoomCombo"
                          Style="{StaticResource ModernComboBox}"
                          DisplayMemberPath="RoomNumber"
                          materialDesign:HintAssist.Hint="Select room"/>
            </StackPanel>

            <!-- Check-in Date -->
            <StackPanel Grid.Row="3" Margin="0,0,0,16">
                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <iconPacks:PackIconMaterial Kind="CalendarArrowRight"
                                                       Width="18" Height="18"
                                                       VerticalAlignment="Center"
                                                       Margin="0,0,8,0"/>
                    <TextBlock Text="Check-in Date"
                               Style="{StaticResource ModernLabel}"
                               Margin="0"/>
                </StackPanel>
                <DatePicker x:Name="CheckInPicker"
                            Style="{StaticResource ModernDatePicker}"
                            materialDesign:HintAssist.Hint="Select check-in date"/>
            </StackPanel>

            <!-- Check-out Date -->
            <StackPanel Grid.Row="4" Margin="0,0,0,16">
                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <iconPacks:PackIconMaterial Kind="CalendarArrowLeft"
                                                       Width="18" Height="18"
                                                       VerticalAlignment="Center"
                                                       Margin="0,0,8,0"/>
                    <TextBlock Text="Check-out Date"
                               Style="{StaticResource ModernLabel}"
                               Margin="0"/>
                </StackPanel>
                <DatePicker x:Name="CheckOutPicker"
                            Style="{StaticResource ModernDatePicker}"
                            materialDesign:HintAssist.Hint="Select check-out date"/>
            </StackPanel>

            <!-- Total Price -->
            <StackPanel Grid.Row="5" Margin="0,0,0,16">
                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <iconPacks:PackIconMaterial Kind="CurrencyUsd"
                                                       Width="18" Height="18"
                                                       VerticalAlignment="Center"
                                                       Margin="0,0,8,0"/>
                    <TextBlock Text="Total Price"
                               Style="{StaticResource ModernLabel}"
                               Margin="0"/>
                </StackPanel>
                <TextBox x:Name="TotalText"
                         Style="{StaticResource ModernTextBox}"
                         materialDesign:HintAssist.Hint="Total amount"
                         IsReadOnly="True"
                         Background="#F5F5F5"/>
            </StackPanel>

            <!-- Status -->
            <StackPanel Grid.Row="6" Margin="0,0,0,16">
                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <iconPacks:PackIconMaterial Kind="CheckCircle"
                                                       Width="18" Height="18"
                                                       VerticalAlignment="Center"
                                                       Margin="0,0,8,0"/>
                    <TextBlock Text="Status"
                               Style="{StaticResource ModernLabel}"
                               Margin="0"/>
                </StackPanel>
                <ComboBox x:Name="StatusCombo"
                          Style="{StaticResource ModernComboBox}"
                          materialDesign:HintAssist.Hint="Select booking status"/>
            </StackPanel>

            <!-- Info Card -->
            <Border Grid.Row="7"
                    Background="#FFF3E0"
                    CornerRadius="8"
                    Padding="12"
                    Margin="0,8,0,16">
                <StackPanel Orientation="Horizontal">
                    <iconPacks:PackIconMaterial Kind="InformationOutline"
                                                       Width="20" Height="20"
                                                       Foreground="{StaticResource WarningBrush}"
                                                       VerticalAlignment="Center"
                                                       Margin="0,0,8,0"/>
                    <TextBlock Text="Total price is calculated automatically based on room rate and number of nights"
                               FontSize="12"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               TextWrapping="Wrap"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- Action Buttons -->
            <StackPanel Grid.Row="9"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="0,8,0,0">
                <Button Content="CANCEL"
                        Style="{StaticResource DialogButton}"
                        IsCancel="True"
                        Margin="0,0,12,0"/>
                <Button Content="SAVE"
                        Style="{StaticResource DialogPrimaryButton}"
                        IsDefault="True"
                        Click="Ok_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>


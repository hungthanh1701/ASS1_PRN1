<Window x:Class="Assignment_1.BookingEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Booking" Height="340" Width="480" WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Customer:" Margin="0,0,10,10" VerticalAlignment="Center"/>
        <ComboBox x:Name="CustomerCombo" Grid.Column="1" Margin="0,0,0,10" DisplayMemberPath="FullName"/>

        <TextBlock Grid.Row="1" Text="Room:" Margin="0,0,10,10" VerticalAlignment="Center"/>
        <ComboBox x:Name="RoomCombo" Grid.Row="1" Grid.Column="1" Margin="0,0,0,10" DisplayMemberPath="RoomNumber"/>

        <TextBlock Grid.Row="2" Text="Check-in:" Margin="0,0,10,10" VerticalAlignment="Center"/>
        <DatePicker x:Name="CheckInPicker" Grid.Row="2" Grid.Column="1" Margin="0,0,0,10"/>

        <TextBlock Grid.Row="3" Text="Check-out:" Margin="0,0,10,10" VerticalAlignment="Center"/>
        <DatePicker x:Name="CheckOutPicker" Grid.Row="3" Grid.Column="1" Margin="0,0,0,10"/>

        <TextBlock Grid.Row="4" Text="Total Price:" Margin="0,0,10,10" VerticalAlignment="Center"/>
        <TextBox x:Name="TotalText" Grid.Row="4" Grid.Column="1" Margin="0,0,0,10"/>

        <TextBlock Grid.Row="5" Text="Status:" Margin="0,0,10,10" VerticalAlignment="Center"/>
        <ComboBox x:Name="StatusCombo" Grid.Row="5" Grid.Column="1" Margin="0,0,0,10"/>

        <StackPanel Grid.Row="7" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="OK" Width="80" Margin="5" IsDefault="True" Click="Ok_Click"/>
            <Button Content="Cancel" Width="80" Margin="5" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>


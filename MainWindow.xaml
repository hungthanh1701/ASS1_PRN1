<Window x:Class="Assignment_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Hotel Management System"
        Height="600"
        Width="900"
        WindowStartupLocation="CenterScreen"
        materialDesign:ColorZoneAssist.Mode="PrimaryDark">
    <Grid>  
        <!-- AppBar -->
        <materialDesign:ColorZone Mode="PrimaryDark" Padding="8">
            <DockPanel>
                <TextBlock Text="Hotel Management System"
                           Foreground="White"
                           FontSize="24"
                           FontWeight="Bold"
                           VerticalAlignment="Center"
                           DockPanel.Dock="Left" />
                <Button Content="Settings"
                        Style="{StaticResource MaterialDesignFlatButton}"
                        Foreground="White"
                        Margin="8,0"
                        DockPanel.Dock="Right" />
            </DockPanel>
        </materialDesign:ColorZone>

        <!-- Main Content -->
        <Grid Margin="0,50,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Navigation Menu -->
            <materialDesign:Card Grid.Column="0" Margin="8" Padding="8" Background="#FF6200EE">
                <StackPanel>
                    <Button Content="Dashboard"
                            Style="{StaticResource MaterialDesignFlatButton}"
                            Foreground="White"
                            Command="{Binding NavigateDashboardCommand}"
                            Margin="0,8" />
                    <Button Content="Rooms"
                            Style="{StaticResource MaterialDesignFlatButton}"
                            Foreground="White"
                            Command="{Binding NavigateRoomsCommand}"
                            Margin="0,8" />
                    <Button Content="Bookings"
                            Style="{StaticResource MaterialDesignFlatButton}"
                            Foreground="White"
                            Command="{Binding NavigateBookingsCommand}"
                            Margin="0,8" />
                    <Button Content="Customers"
                            Style="{StaticResource MaterialDesignFlatButton}"
                            Foreground="White"
                            Command="{Binding NavigateCustomersCommand}"
                            Margin="0,8" />
                    <Button Content="Staff"
                            Style="{StaticResource MaterialDesignFlatButton}"
                            Foreground="White"
                            Command="{Binding NavigateStaffCommand}"
                            Margin="0,8" />
                </StackPanel>
            </materialDesign:Card>

            <!-- Content Area -->
            <materialDesign:Card Grid.Column="1" Margin="8" Padding="16" Background="#FF03DAC6">
                <StackPanel>
                    <TextBlock Text="Welcome to Room Management System"
                               Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                               Foreground="#FF000000"
                               Margin="0,0,0,16" />
                    <TextBlock Text="Use the navigation menu to manage rooms, bookings, customers, and staff."
                               Style="{StaticResource MaterialDesignBody1TextBlock}"
                               Foreground="#FF000000"
                               Margin="0,0,0,16" />
                    <Button Content="Get Started"
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            Background="#FF6200EE"
                            Foreground="White"
                            Command="{Binding GetStartedCommand}"
                            HorizontalAlignment="Left" />
                </StackPanel>
            </materialDesign:Card>
        </Grid>
    </Grid>
</Window>